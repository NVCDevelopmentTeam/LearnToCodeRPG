# game/scripts/labels/npc_question_and_answer.rpy:175
translate vietnamese ask_api_be788508:

    # npc "API stands for application programing interface."
    npc "API là viết tắt của Giao diện lập trình ứng dụng (Application Programming Interface)."

# game/scripts/labels/npc_question_and_answer.rpy:176
translate vietnamese ask_api_f3227293:

